        <TextBlock Name="SearchedFor" FontSize="40" Foreground="White" Background="Black" FontWeight="Bold" Grid.ColumnSpan="2" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Search for:" VerticalAlignment="Top" Margin="25,17,0,0" Height="60" Width="240"/>
        <TextBox Name="SpecifiedWord" Grid.ColumnSpan="2" FontSize="40" FontWeight ="Bold" VerticalContentAlignment="Center" HorizontalAlignment="Left" Height="67" TextWrapping="Wrap" Text="Type Here" VerticalAlignment="Top" Width="332" Margin="460,9,0,0" TextChanged="TextBox_TextChanged_1"/>

    </Grid>
</Window>
